{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules/**"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
